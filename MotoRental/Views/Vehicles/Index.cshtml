                selectedBrandIds = $('.brand-checkbox:checked').map(function () {
                    return $(this).data('brand-id');
                }).get();
                console.log('Selected brand IDs:', selectedBrandIds);
                if (selectedBrandIds.length > 0) {
                    $('.product-item').hide();
                    $.each(selectedBrandIds, function (index, brandId) {
